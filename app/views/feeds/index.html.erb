<h1>Listing feeds</h1>

<table>
  <tr>
    <th>name</th>
    <th>monitor_name</th>
    <th>host_name</th>
  </tr>
<% $feeds.each do |feed| %>
  <tr>
		<td><%= feed["name"]%></td>  
		<td><%= feed["monitor_name"]%></td> 
		<td><%= feed["host_name"]%></td>   
    <td><%= link_to 'Show feed',{ :controller => "hosts", :action => "showfeed", :monitor_feed_uri => CGI::escape(feed["monitor_feed_uri"]).gsub('.', 'XXX')} %></td>
   </tr>
<% end %>
</table>

